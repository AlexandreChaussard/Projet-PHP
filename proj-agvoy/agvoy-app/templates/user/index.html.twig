{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>email</th>
            <th>owner</th>
            <th> </th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>
                    {% if 'ROLE_OWNER' in user.roles %}
                        oui
                    {% else %}
                        non
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('user_delete', {'id': user.id}) }}">
                        delete
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('owner_new') }}">Create new</a>
{% endblock %}
