{% extends 'base.html.twig' %}

{% block title %}Couettes et cafés - Annonce {% endblock %}

{% block main %}
    <!-- Product section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="..." /></div>
                <div class="col-md-6">
                    <div class="small mb-1">SKU: BST-498</div>
                    <h1 class="display-5 fw-bolder">{{ room.summary }}</h1>
                    <div class="fs-5 mb-5">
                        <span>{{ room.price }}€</span>
                    </div>

                    <table class="table">
                        <thead>
                        <tr>
                            <th>Owner</th>
                            <th>prix</th>
                            <th>capacité</th>
                            <th>Superficie</th>
                            <th>Description</th>
                            <th> </th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>{{ room.owner }}</td>
                            <td>{{ room.price }}</td>
                            <td>{{ room.capacity }}</td>
                            <td>{{ room.superficy }}</td>
                            <td>{{ room.description }}</td>
                            <td>
                                <a href="{{ path('room_index') }}">
                                    Go back
                                </a>
                            </td>
                        </tr>

                        </tbody>
                    </table>

                    <div class="d-flex">
                        <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
                        <button class="btn btn-outline-dark flex-shrink-0" type="button">
                            <i class="bi-cart-fill me-1"></i>
                            Ajouter au panier
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Related items section-->
    <section class="py-5 bg-light">
        <div class="container px-4 px-lg-5 mt-5">
            <h2 class="fw-bolder mb-4">Couettes et cafés de la même région</h2>
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

                {% for related in relatedRooms %}

                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">{{ related.summary }}</h5>
                                <!-- Product price-->
                                {{ related.price }}€
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">
                                Visualiser
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                {% endfor %}

            </div>
        </div>
    </section>

{% endblock %}